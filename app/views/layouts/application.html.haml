!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Ragafied"
    %meta{:content => content_for?(:description) ? yield(:description) : "Ragafied", :name => "description"}
    %meta{:name => "viewport", :content => "width=device-width"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    / = javascript_include_tag "/crisp-1.0.4/Crisp-warm/assets/js/bootstrap.min.js"
    / = javascript_include_tag "/crisp-1.0.4/Crisp-warm/assets/js/ddsmoothmenu-min.js"
    / = javascript_include_tag "/crisp-1.0.4/Crisp-warm/assets/js/jquery.dcjqaccordion.2.7.min.js"
    / = javascript_include_tag "/crisp-1.0.4/Crisp-warm/assets/js/scripts.js"


    = csrf_meta_tags
    = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              = render 'layouts/messages'
              = yield
          %footer
      / ! end of .container
    / ! end of #main
